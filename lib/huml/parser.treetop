grammar Huml

  rule top
    space doctype:("doctype " space type:([a-zA-Z1-9]*) space)? block {
      def tokenize
        [:multi, [:html, :doctype, doctype.type.text_value]]
      end
    }
  end

  rule block
    .*
  end

  rule space
    [\s]* {
      def tokenize
        [:newline] if text_value =~ /[\r\n]/
      end
    }
  end

end
