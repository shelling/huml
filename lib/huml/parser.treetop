grammar Huml

  rule top
    space doctype:doctype? space html <Top>
  end

  rule block
    '%' name:[a-zA-Z1-9]+ selector_list space '{' space html space '}' space <Block>
  end

  rule doctype
    "doctype " [ \t]* typestring:([a-zA-Z1-9]*) <Doctype>
  end

  rule selector_list
    (type:[.#] name:[a-zA-Z1-9-]+)* <SelectorList>
  end

  rule space
    [\s]* <Space>
  end

  rule html
    block* <HTML>
  end

end
